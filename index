let answeredCount = 0;
let correctCount = 0;
let wrongCount = 0;
const totalQuestions = quizData.length;

function renderQuiz() {
    const container = document.getElementById('quiz-container');
    let html = '';
    let currentSection = '';
    
    quizData.forEach((item, index) => {
        // Aggiungi titolo sezione se cambia
        if (item.section && item.section !== currentSection) {
            currentSection = item.section;
            html += `<div class="section-title">üìö ${currentSection}</div>`;
        }
        
        const letters = ['A', 'B', 'C', 'D'];
        
        html += `
            <div class="question" id="question-${index}">
                <div>
                    <span class="question-number">${index + 1}</span>
                    <span class="question-text">${item.question}</span>
                </div>
                <div class="options">
                    ${item.options.map((opt, optIndex) => `
                        <div class="option" id="option-${index}-${optIndex}" onclick="checkAnswer(${index}, ${optIndex})">
                            <span class="option-letter">${letters[optIndex]}</span>
                            <span>${opt}</span>
                        </div>
                    `).join('')}
                </div>
                <div class="feedback" id="feedback-${index}"></div>
            </div>
        `;
    });
    
    container.innerHTML = html;
    document.getElementById('total').textContent = totalQuestions;
}

function checkAnswer(questionIndex, selectedOption) {
    const question = quizData[questionIndex];
    const questionDiv = document.getElementById(`question-${questionIndex}`);
    const feedbackDiv = document.getElementById(`feedback-${questionIndex}`);
    const options = questionDiv.querySelectorAll('.option');
    
    // Se gi√† risposto, non fare nulla
    if (questionDiv.classList.contains('answered')) return;
    
    // Segna come risposto
    questionDiv.classList.add('answered');
    answeredCount++;
    
    // Disabilita tutte le opzioni
    options.forEach(opt => opt.classList.add('disabled'));
    
    // Evidenzia la risposta selezionata e quella corretta
    const selectedDiv = document.getElementById(`option-${questionIndex}-${selectedOption}`);
    const correctDiv = document.getElementById(`option-${questionIndex}-${question.correct}`);
    
    if (selectedOption === question.correct) {
        // Risposta corretta
        correctCount++;
        selectedDiv.classList.add('correct-answer');
        questionDiv.classList.add('correct');
        feedbackDiv.className = 'feedback correct show';
        feedbackDiv.innerHTML = '‚úÖ <strong>Corretto!</strong> Ottimo lavoro!';
    } else {
        // Risposta sbagliata
        wrongCount++;
        selectedDiv.classList.add('wrong-answer');
        correctDiv.classList.add('correct-answer');
        questionDiv.classList.add('wrong');
        feedbackDiv.className = 'feedback wrong show';
        feedbackDiv.innerHTML = `‚ùå <strong>Sbagliato!</strong> La risposta corretta era: <strong>${question.options[question.correct]}</strong>`;
    }
    
    // Aggiorna punteggio
    updateScore();
    
    // Controlla se quiz completato
    if (answeredCount === totalQuestions) {
        setTimeout(showFinalResult, 500);
    }
}

function updateScore() {
    document.getElementById('answered').textContent = answeredCount;
    document.getElementById('correct').textContent = correctCount;
    document.getElementById('wrong').textContent = wrongCount;
    
    const progress = (answeredCount / totalQuestions) * 100;
    document.getElementById('progress').style.width = progress + '%';
}

function showFinalResult() {
    const percentage = Math.round((correctCount / totalQuestions) * 100);
    const resultDiv = document.getElementById('final-result');
    const emojiDiv = document.getElementById('result-emoji');
    const messageDiv = document.getElementById('final-message');
    const scoreDiv = document.getElementById('final-score');
    const detailDiv = document.getElementById('final-detail');
    
    // Determina emoji e messaggio in base al punteggio
    let emoji, message;
    if (percentage >= 90) {
        emoji = 'üèÜ';
        message = 'Eccellente!';
    } else if (percentage >= 75) {
        emoji = 'üåü';
        message = 'Ottimo lavoro!';
    } else if (percentage >= 60) {
        emoji = 'üëç';
        message = 'Buon risultato!';
    } else if (percentage >= 50) {
        emoji = 'üìö';
        message = 'Sufficiente, ma puoi migliorare!';
    } else {
        emoji = 'üí™';
        message = 'Riprova, ce la puoi fare!';
    }
    
    emojiDiv.textContent = emoji;
    messageDiv.textContent = message;
    scoreDiv.textContent = percentage + '%';
    detailDiv.textContent = `Hai risposto correttamente a ${correctCount} domande su ${totalQuestions}`;
    
    resultDiv.classList.add('show');
    resultDiv.scrollIntoView({ behavior: 'smooth' });
}

function restartQuiz() {
    answeredCount = 0;
    correctCount = 0;
    wrongCount = 0;
    
    document.getElementById('final-result').classList.remove('show');
    renderQuiz();
    updateScore();
    window.scrollTo({ top: 0, behavior: 'smooth' });
}

// Inizializza il quiz
renderQuiz();
updateScore();
</script>

</body>
</html>
